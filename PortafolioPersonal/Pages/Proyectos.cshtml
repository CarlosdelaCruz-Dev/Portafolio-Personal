@page // 1. Le dice a ASP.NET Core que esto es una página web.
@model PortafolioPersonal.Pages.ProyectosModel // 2. Conecta esta vista con el código de C# que le da la lógica.
@{
    ViewData["Title"] = "Mis Proyectos"; // 3. Le da un título a la página que se mostrará en la pestaña del navegador.
}

}

<h1>Mis Proyectos</h1>  // 4. Es el título principal de la página

<div class="proyectos-container">
    @foreach (var proyecto in Model.Proyectos)
    {
    <div class="proyecto-card">
        <h3>@proyecto.Nombre</h3> <p>@proyecto.Descripcion</p> <a href="@proyecto.UrlRepositorio" target="_blank">Ver código</a> <span class="tecnologia">Tecnología: @proyecto.Tecnologia</span>
    </div>
    }
</div>

<style>
    .proyectos-container {
     /* Utiliza un sistema de cuadrícula para crear un diseño flexible. */
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    /* -- Estilo para cada tarjeta de Proyecto -- */
    .proyecto-card {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
    }

        /* -- Efecto al pasar el mouse sobre la tarjeta -- */
        .proyecto-card:hover {
            /* Mueve la tarjeta ligeramente hacia arriba para dar un efecto interactivo. */
            transform: translateY(-5px);
        }

        /* -- Estilo del título del proyecto (h3) -- */
        .proyecto-card h3 {
            color: #333;
            font-size: 1.5rem;
        }

        /* -- Estilo de la descripción del proyecto (p) -- */
        .proyecto-card p {
            color: #666;
            font-size: 1rem;
        }

        /* -- Estilo del enlace "Ver código" (a) -- */
        .proyecto-card a {
            /* Hace que el enlace se comporte como un bloque para poder darle tamaño. */
            display: inline-block;
            /* Añade espacio arriba del enlace. */
            margin-top: 10px;
            /* Añade espacio interno para que se vea como un botón. */
            padding: 8px 12px;
            /* Color de fondo azul. */
            background-color: #007bff;
            /* Color de texto blanco. */
            color: white;
            /* Elimina la línea de subrayado del enlace. */
            text-decoration: none;
            /* Redondea las esquinas del botón. */
            border-radius: 4px;
        }

    /* -- Estilo para el texto de la tecnología -- */
    .tecnologia {
        /* Ocupa todo el ancho de la línea para aparecer debajo de la descripción. */
        display: block;
        /* Pone el texto en cursiva. */
        font-style: italic;
        /* Añade espacio arriba del texto. */
        margin-top: 10px;
        /* Define el color del texto. */
        color: #888;
    }
</style>